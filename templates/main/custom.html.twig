{% extends 'layouts/base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1 class="text-center">Hello, Nataly!</h1>
        <br>
        <h3>Categories in blog:</h3>
        <table>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td style="padding-right: 8px">{{ loop.index }}</td>
                        <td style="padding-right: 8px">
                            <a href="{{ path('category.show', {id: category.id}) }}">
                                <img src="{{ asset('/uploads/') }}{{ category.image }}"
                                     alt="{{ category.title }}" width="50px">
                            </a>
                        </td>
                        <td style="padding-right: 8px">
                            <a href="{{ path('category.show', {id: category.id}) }}">{{ category.title }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <br>
        <br>
        <h3>Read the latest posts in my blog:</h3>
        <div class="row">
            {% for post in posts|sort|reverse %}
                <div class="card" style="width: 18rem; margin: 10px; padding: 10px">
                    <div class="card-img-top" style="display: flex; justify-content: center">
                        <img src="{{ asset('/uploads/') }}{{ post.image }}"
                             alt="{{ post.title }}" width="150px">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('posts_show', {id: post.id}) }}">{{ post.title }}</a>
                        </h5>
                        <p class="card-text">{{ post.content|slice(0, 60) }}...</p>
                        <a href="{{ path('posts_show', {id: post.id}) }}">Details...</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
