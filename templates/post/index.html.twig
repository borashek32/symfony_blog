{% extends 'layouts/base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>List of all posts</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
            <td>Id</td>
            <td>Title</td>
            <td>Category</td>
            <td>Actions</td>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>
                    <a href="{{ path('posts_show', {id: post.id}) }}">{{ post.title }}</a>
                </td>
                <td>

                </td>
                <td>
                    <a href="{{ path('posts_delete', {id: post.id}) }}" style="color: red">Delete</a>
                    <a href="{{ path('posts_update', {id: post.id}) }}" style="color: green">Edit</a>
                    <a href="{{ path('posts_show', {id: post.id}) }}" style="color: blue">Show</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
