{% extends 'layouts/base.html.twig' %}

{% block title %}Posts by Category{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Posts in the category {{  }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped">
            <thead>
            <td>Id</td>
            <td>Title</td>
            <td>Actions</td>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td><a href="{{ path('post.show', {id: post.id}) }}">{{ post.title }}</a></td>
                    <td>
                        <a href="{{ path('post.delete', {id: post.id}) }}" style="color: red">Delete</a>
                        <a href="{{ path('post.edit', {id: post.id}) }}" style="color: green">Edit</a>
                        <a href="{{ path('post.show', {id: post.id}) }}" style="color: blue">Show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
